<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ModuloCompras.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ModuloCompras.Mvc.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            margin: 0;
            height: 100vh;
            overflow: hidden;
        }

        .navbar-custom {
            background-color: #007bff;
            height: 70px;
            display: flex;
            align-items: center;
            padding-left: 20px;
            color: #fff;
            font-size: 24px;
            font-weight: bold;
            margin: 0;
        }

        #sidebar {
            width: 250px;
            position: fixed;
            top: 70px;
            left: 0;
            height: calc(100% - 70px);
            background: #343a40;
            color: #fff;
            padding-top: 20px;
            overflow-y: auto;
        }

            #sidebar .nav-link {
                color: #fff;
                font-size: 18px;
            }

                #sidebar .nav-link i {
                    margin-right: 10px;
                }

                #sidebar .nav-link:hover {
                    background: #495057;
                }

                #sidebar .nav-link.active {
                    background-color: #ff0000; /* Color de fondo rojo para el elemento activo */
                    color: #fff;
                }

        #content {
            margin-left: 250px;
            padding: 20px;
            height: calc(100% - 70px);
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="navbar-custom">
        Modulo Compras
    </div>
    <div id="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Inicio
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Proveedores" ? "active" : "")" asp-area="" asp-controller="Proveedores" asp-action="Index">
                    <i class="fas fa-users"></i> Proveedores
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Facturas" ? "active" : "")" asp-area="" asp-controller="Facturas" asp-action="Index">
                    <i class="fas fa-file-invoice"></i> Facturas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "DetalleFacturas" ? "active" : "")" asp-area="" asp-controller="DetalleFacturas" asp-action="Index">
                    <i class="fas fa-file-invoice-dollar"></i> Detalles Factura
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Productos" ? "active" : "")" asp-area="" asp-controller="Productos" asp-action="Index">
                    <i class="fas fa-box"></i> Productos
                </a>
            </li>
        </ul>
    </div>
    <div id="content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
