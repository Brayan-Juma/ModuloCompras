<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ModuloCompras.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ModuloCompras.Mvc.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
        }

        #sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            background: #343a40;
            color: #fff;
            padding-top: 20px;
        }

            #sidebar .nav-link {
                color: #fff;
            }

                #sidebar .nav-link:hover {
                    background: #495057;
                }

        #content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="sidebar">
        <div class="sidebar-header text-center">
            <h4>Módulo Compras</h4>
        </div>
        <ul class="nav flex-column">


            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Inicio
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Proveedores" asp-action="Index">
                    <i class="fas fa-users"></i> Proveedores
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Facturas" asp-action="Index">
                    <i class="fas fa-file-invoice"></i> Facturas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="DetalleFacturas" asp-action="Index">
                    <i class="fas fa-file-invoice-dollar"></i> Detalles Factura
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Productos" asp-action="Index">
                    <i class="fas fa-box"></i> Productos
                </a>
            </li>
           

            <li class="nav-item">
                <partial name="_LoginPartial.cshtml" />
            </li>

            

        </ul>
    </div>
    <div id="content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
