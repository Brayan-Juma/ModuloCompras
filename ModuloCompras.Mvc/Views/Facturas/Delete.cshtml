@model ModuloCompras.Entidades.Factura

@{
    ViewData["Title"] = "Eliminar Factura";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>


<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Fecha)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProveedorId)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProveedorId)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TipoPago)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoPago)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaVencimiento)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaVencimiento)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Impresa)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Impresa)</dd>
                </dl>

                <div class="form-group text-center mt-4 d-flex justify-content-center">
                    <form asp-action="Delete" class="d-inline">
                        <input type="submit" value="Eliminar" class="btn btn-danger mx-2" />
                    </form>
                    <a asp-action="Index" class="btn btn-secondary mx-2"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
