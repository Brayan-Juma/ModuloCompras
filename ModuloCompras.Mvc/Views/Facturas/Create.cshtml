@model ModuloCompras.Entidades.Factura

@{
    ViewData["Title"] = "Crear Factura";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Id" class="control-label"></label>
                                <input asp-for="Id" class="form-control" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Fecha" class="control-label"></label>
                                <input asp-for="Fecha" class="form-control" />
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ProveedorId" class="control-label"></label>
                                <input asp-for="ProveedorId" class="form-control" />
                                <span asp-validation-for="ProveedorId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TipoPago" class="control-label"></label>
                                <input asp-for="TipoPago" class="form-control" />
                                <span asp-validation-for="TipoPago" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="FechaVencimiento" class="control-label"></label>
                                <input asp-for="FechaVencimiento" class="form-control" />
                                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check mb-3">
                                <input class="form-check-input" asp-for="Impresa" />
                                <label class="form-check-label" asp-for="Impresa"></label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center mt-4 d-flex justify-content-center">
                        <input type="submit" value="Crear" class="btn btn-primary mx-2" />
                        <a asp-action="Index" class="btn btn-secondary mx-2"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
