@model ModuloCompras.Entidades.Proveedor

@{
    ViewData["Title"] = "Borrar un Proveedor";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.CedulaRuc)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CedulaRuc)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Apellidos)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellidos)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Nombres)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombres)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Ciudad)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ciudad)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.TipoProveedor)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoProveedor)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Direccion)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Telefono)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Estado)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>
                </dl>

                <div class="form-group text-center mt-4 d-flex justify-content-center">
                    <form asp-action="Delete" class="d-inline">
                        <input type="submit" value="Borrar" class="btn btn-danger mx-2" />
                    </form>
                    <a asp-action="Index" class="btn btn-secondary mx-2"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
